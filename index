    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const counterElement = document.getElementById('plastic-counter');
            let plasticTons = 0; const tonsPerSecond = 13.6;
            setInterval(() => { plasticTons += tonsPerSecond / 10; counterElement.textContent = Math.floor(plasticTons).toLocaleString(); }, 100);
            const waterfallSection = document.getElementById('waterfall-section');
            setInterval(() => {
                const plastic = document.createElement('div');
                plastic.classList.add('plastic-item');
                plastic.style.left = `${Math.random() * 100}vw`; plastic.style.animationDuration = `${Math.random() * 3 + 4}s`;
                waterfallSection.appendChild(plastic);
                setTimeout(() => plastic.remove(), 7000);
            }, 200);

            const bottle = document.getElementById('draggable-bottle');
            const choiceContent = document.getElementById('choice-content');
            const landfillAnimation = document.getElementById('landfill-animation');
            const recyclingAnimation = document.getElementById('recycling-animation');
            
            function resetChoice() {
                landfillAnimation.style.display = 'none';
                recyclingAnimation.style.display = 'none';
                choiceContent.style.display = 'flex';
                bottle.style.transition = 'transform 0s, opacity 0s';
                bottle.style.transform = 'translateY(0) scale(1)';
                bottle.style.opacity = '1';
            }

            bottle.addEventListener('dragstart', e => { e.dataTransfer.setData('text/plain', 'bottle'); setTimeout(() => bottle.style.opacity = '0.5', 0); });
            bottle.addEventListener('dragend', () => bottle.style.opacity = '1');

            document.querySelectorAll('.bin').forEach(bin => {
                bin.addEventListener('dragover', e => { e.preventDefault(); bin.classList.add('drag-over'); });
                bin.addEventListener('dragleave', () => bin.classList.remove('drag-over'));
                bin.addEventListener('drop', e => {
                    e.preventDefault();
                    bin.classList.remove('drag-over');
                    choiceContent.style.display = 'none';
                    bottle.style.transition = 'transform 0.5s ease-in, opacity 0.5s ease-in';
                    bottle.style.transform = 'translateY(80px) scale(0.3)';
                    bottle.style.opacity = '0';
                    setTimeout(() => {
                        if (bin.id === 'yellow-bin') {
                            recyclingAnimation.style.display = 'flex';
                        } else {
                            landfillAnimation.style.display = 'flex';
                        }
                    }, 500);
                });
            });

            document.querySelectorAll('.reset-button').forEach(button => button.addEventListener('click', resetChoice));

            document.querySelectorAll('.solution-card').forEach(card => {
                card.querySelector('p').innerHTML = card.getAttribute('data-stat');
                card.addEventListener('click', () => card.classList.toggle('active'));
            });

            document.getElementById('submit-pledge').addEventListener('click', (e) => {
                e.preventDefault();
                document.getElementById('pledge-form').style.display = 'none';
                document.getElementById('pledge-thanks').style.display = 'block';
            });
        });
    </script>
</body>
